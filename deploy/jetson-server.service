[Unit]
Description=Jetson Flask Web Server
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=%h/Server
Environment=FLASK_HOST=0.0.0.0
Environment=FLASK_PORT=8000
Environment=FLASK_ENV=production
ExecStart=/usr/bin/env gunicorn --bind 0.0.0.0:8000 app.wsgi:app
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
